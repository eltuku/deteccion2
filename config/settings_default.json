{
  "camera": {
    "index": 0,
    "width": 1280,
    "height": 720,
    "fps": 30,
    "buffer_size": 1,
    "auto_exposure": false,
    "brightness": 0.0,
    "contrast": 1.0
  },
  "detection": {
